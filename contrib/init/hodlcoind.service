[Unit]
Description=HODLCoin's distributed currency daemon
After=network.target

[Service]
User=hodlcoin
Group=hodlcoin

Type=forking
PIDFile=/var/lib/hodlcoind/hodlcoind.pid
ExecStart=/usr/bin/hodlcoind -daemon -pid=/var/lib/hodlcoind/hodlcoind.pid \
-conf=/etc/hodlcoin/hodlcoin.conf -datadir=/var/lib/hodlcoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
